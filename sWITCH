package newclass;
import java.util.Scanner;
import java.text.DecimalFormat;

/**
 *
 * @author Class
 */

class SwitchDemo {
    public static void main(String[] args) {
        int choice = 0;
        Scanner keyboard = new Scanner (System.in);
        System.out.println("please choose a number");
        choice= keyboard.nextInt();
        switch (choice) {
            case 1:  System.out.println(" You selected 1."); break;
            case 2:  System.out.println(" You selected 2 or 3."); break;
            case 3:  System.out.println(" You selected 2 or 3."); break;
            case 4:  System.out.println(" You selected 4."); break;
         default: System.out.println(" Select again please.");break;
        }
    }
}
